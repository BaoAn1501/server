        var name = full_name.val().trim();
        var mail = email.val().trim();
        var pass = password.val().trim();
        var cPass = confirmPassword.val().trim();
        var _role = role == "manager" ? true : false;
        if(validate(name, mail, pass, cPass)>0){
          var data = {
            email: mail,
            password: pass,
            full_name: name,
            admin: _role
          }
          fetch('http://localhost:3000/register/admin', {
            method: 'POST', // or 'PUT'
            headers: {
              'Accept': 'application/json',
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          })
          .then((response) => response.json())
          .then((data) => {
            if(data.status==false){
              if(data.message){
                alert(data.message);
              }
            }
            if(data.status==true){
              $.cookie('user', JSON.stringify(data.result));
              window.location.href = "http://localhost:3000/users";
            }
          })
          .catch((error) => {
            console.log('error: ', error);
          });
        }
      })

      function validate(full_name, email, pass, confirmPassword){
        let result = 1;
        var emailRegex = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
        var passRegex = /^[a-zA-Z0-9]/;
        if(email.length == 0 || pass.length==0 || full_name.length == 0 || confirmPassword.length == 0){
          alert('Bạn chưa nhập đầy đủ thông tin');
          result = 0;
        }
        else if(!email.match(emailRegex)){
          alert('Email không đúng định dạng');
          result = 0;
        } else if(!pass.match(passRegex)){
          alert('Mật khẩu không chứa ký tự đặc biệt');
          result = 0;
        } else if(pass!=confirmPassword){
          alert('Mật khẩu không trùng khớp');
          result = 0;
        } else {
          result = 1;
        }
        return result;
      }
